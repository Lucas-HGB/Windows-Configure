                    </Button.Resources>
                    <Image  Source="/Images/SublimeMerge.png"/>
                </Button>

                <Button CommandParameter="VsCode">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/VsCode.png"/>
                </Button>

                <Button CommandParameter="VisualStudio">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/VisualStudio.png"/>
                </Button>

                <Button CommandParameter="PyCharm">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/PyCharm.png"/>
                </Button>

                <Button CommandParameter="Git">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/Git.png"/>
                </Button>

                <Button CommandParameter="GitHubDesktop">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/GitHubDesktop.png"/>
                </Button>

                <Button CommandParameter="Postman">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/Postman.png"/>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button CommandParameter="PyCharm">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Image  Source="/Images/PyCharm.png"/>
                </Button>

                <Button CommandParameter="BattleNet">
                    <Button.Resources>
                        <Style TargetType="Border">
